<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search by Location</title>
    <link rel="stylesheet" href="/css/materialize.min.css">
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        body, html {
            width: 100%;
            height: 100%;
            font-family: 'Arial', sans-serif;
            padding: 0;
            box-sizing: border-box;
        }

        .content {
            background: linear-gradient(to bottom, rgba(0,77,64,0.7), rgba(0,77,64,0.7)), url('/locationImg.png');
            background-size: cover;
            background-position: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
            color: #ffffff;
        }

        .headline, .map-container {
            background-color: rgba(255, 255, 255, 0.1);
            padding: 21px;
            border-radius: 5px;
            margin: 10px;
            text-align: center;
            width: 80%;
            box-shadow: 0 4px 6px rgba(0,0,0,0.2);
        }

        .map-container {
            height: 400px; /* Set the height of the map */
        }

        #map {
            width: 100%;
            height: 100%;
        }

        .search-container {
            margin-top: 20px;
            display: flex;
            justify-content: center;
        }

        .search-container input, .search-container button {
            padding: 10px;
            margin: 5px;
        }
    </style>
</head>
<body>
    <div class="content">
        <div class="headline">
            <h1>SEARCH BY LOCATION</h1>
            <p>Find and connect with players and enthusiasts near you.</p>
        </div>
        <div class="search-container">
            <input type="text" placeholder="Search locations..." id="search-input">
            <button onclick="filterLocations()">Search</button>
        </div>
        <div class="map-container">
            <div id="map"></div>
        </div>
    </div>

    <script>
        function initMap() {
    if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(function(position) {
            var userLocation = {
                lat: position.coords.latitude,
                lng: position.coords.longitude
            };

            var mapOptions = {
                center: userLocation,
                zoom: 12 // Closer zoom to show nearby area
            };

            var map = new google.maps.Map(document.getElementById('map'), mapOptions);

            // Optionally add a marker for the user's location
            new google.maps.Marker({
                position: userLocation,
                map: map,
                title: 'Your Location'
            });

            // Add more markers here for other locations if available
            // You can loop through an array of locations and add markers for each
            /* Example:
            var locations = [{lat: -34.397, lng: 150.644}, {lat: -34.390, lng: 150.650}];
            locations.forEach(function(location) {
                new google.maps.Marker({
                    position: location,
                    map: map,
                    title: 'Location Title' // You can dynamically assign titles based on your location data
                });
            });
            */
        }, function() {
            handleLocationError(true, map.getCenter());
        });
    } else {
        // Browser doesn't support Geolocation
        handleLocationError(false);
    }
}

function handleLocationError(browserHasGeolocation, pos) {
    var infoWindow = new google.maps.InfoWindow({map: map});
    infoWindow.setPosition(pos);
    infoWindow.setContent(browserHasGeolocation ?
                          'Error: The Geolocation service failed.' :
                          'Error: Your browser doesn\'t support geolocation.');
}


        function filterLocations() {
            var input = document.getElementById('search-input');
            var filter = input.value.toUpperCase();
            var ul = document.getElementById('locations-list');
            var cards = ul.getElementsByClassName('location-card');

            for (var i = 0; i < cards.length; i++) {
                var txtValue = cards[i].textContent || cards[i].innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    cards[i].style.display = "";
                } else {
                    cards[i].style.display = "none";
                }
            }
        }
    </script>

    <script src="/js/materialize.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBUX794y5u1d8F-L9tGsp0uuHkJSoiXwfA&callback=initMap" async defer></script>
</body>
</html>
